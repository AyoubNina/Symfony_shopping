{% extends 'base.html.twig' %}
{% block body %}
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Prenom</th>
				<th scope="col">Email</th>
				<th scope="col">Message</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contacts %}
				<tr>
					<td>{{  contact.nom }}</td> 
					<td>{{  contact.prenom }}</td>
					<td>{{  contact.email }}</td>
					<td>{{  contact.message }}</td>
                    <td>
                           <a href={{  asset( path('contact_supprimer') ~ "?id_supprimer=" ~ contact.id)}}>Supprimer</a>
                    </td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
