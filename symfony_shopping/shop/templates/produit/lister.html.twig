{% extends 'base.html.twig' %}
{% block body %}
<div class="example-wrapper">

	<div class="bg-light p-3">
         <h1>liste des produits</h1>
    </div>
	
{% if items | length > 0 %}
	<table class="table" border="1">
		
			<tr>
				<td>code</td>
				<td>label</td>
				<td>image</td>
				<td>description</td>
                <td>prix</td>
                <td>editer</td>
                <td>supprimer</td>

			</tr>
		
			{% for item in items %}
				<tr>
					<td>{{  item.code }}</td> 
					<td>{{  item.label }}</td>
					<td> <img src={{  asset('img/' ~ item.image) }}  width="100" height="100"/></td>
					<td>{{ item.description }}</td>
                    <td>{{ item.prix }} TND</td>
                    <td><a href={{  asset( path('editer') ~ "?id_editer=" ~ item.id)}}>Editer</a></td>
                    <td><a href={{  asset( path('supprimer') ~ "?id_supprimer=" ~ item.id)}}>Supprimer</a></td>

				</tr>
			{% endfor %}
               
	</table>
    {% else %}
        <p> aucun produit </p>
    {% endif %}
     </div>

{% endblock %}